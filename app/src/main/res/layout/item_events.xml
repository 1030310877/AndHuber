<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="2dp"
    app:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/img_item_event_logo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/ic_call_split_black_18dp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_item_event_actor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/img_item_event_logo"
                android:layout_toRightOf="@+id/img_item_event_logo"
                android:typeface="monospace"
                tool:text="LoginName" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_item_event_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_item_event_actor_name"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img_item_event_logo"
                tool:text="@string/forked" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_item_event_action_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txt_item_event_action"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/txt_item_event_action"
                android:ellipsize="end"
                tool:text="1030310877/LoadMoreRecyclerView" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_item_event_action_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_item_event_action"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/img_item_event_logo"
                tool:text="@string/to" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_item_event_action_receiver_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txt_item_event_action_2"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/txt_item_event_action_2"
                tool:text="1232143215353/LoadMoreRecyclerView" />
        </RelativeLayout>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_item_event_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="right"
            tool:text="2016-07-12 11:00:00" />
    </LinearLayout>
</android.support.v7.widget.CardView>